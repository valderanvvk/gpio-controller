{
  "name": "gpio-controller",
  "version": "1.0.0",
  "description": "Access to GPIO, organization of pins into groups, using Node.js",
  "main": "main.js",
  "types": "main.d.ts",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/valderanvvk/gpio-controller.git"
  },
  "homepage": "https://github.com/valderanvvk/gpio-controller",
  "bugs": {
    "url": "https://github.com/valderanvvk/gpio-controller/issues"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/main.js",
    "dev": "nodemon",
    "dev:inspect": "nodemon -e ts,json --exec node --inspect=localhost:9229 -r ts-node/register ./src/main.ts",
    "test": "jest --coverage",
    "lint": "eslint ./src/**",
    "lint:fix": "eslint ./src/** --fix"
  },
  "keywords": [
    "gpio",
    "iot",
    "interrupt",
    "raspberry",
    "raspi",
    "rpi",
    "pi",
    "linux"
  ],
  "author": "Valderan",
  "license": "MIT",
  "dependencies": {
    "onoff": "^6.0.3"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "devDependencies": {
    "@types/jest": "^28.1.3",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.1",
    "nodemon": "^1.19.4",
    "prettier": "^2.7.1",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.4"
  }
}